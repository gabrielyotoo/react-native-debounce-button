{
  "name": "react-native-debounce-button",
  "version": "0.1.0",
  "types": "lib/esm/types/debounce-button.d.ts",
  "module": "lib/esm/debounce-button.mjs",
  "main": "lib/esm/debounce-button.mjs",
  "directories": {
    "example": "example",
    "test": "tests",
    "lib": "lib"
  },
  "scripts": {
    "clean": "rm -rf ./lib",
    "build": "yarn clean && yarn build:esm && yarn build:cjs",
    "build:esm": "npx tsc -p ./tsconfig.esm.json && mv ./lib/esm/debounce-button.js ./lib/esm/debounce-button.mjs",
    "build:cjs": "npx tsc -p ./tsconfig.cjs.json && mv ./lib/cjs/debounce-button.js ./lib/cjs/debounce-button.cjs",
    "prepack": "yarn build",
    "test": "vitest",
    "lint": "npx eslint src/** tests/**"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gabrielyotoo/react-native-debounce-button"
  },
  "keywords": [
    "react-native",
    "button",
    "debounce"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/types/debounce-button.d.ts",
        "default": "./lib/esm/debounce-button.mjs"
      },
      "require": {
        "types": "./lib/cjs/types/debounce-button.d.ts",
        "default": "./lib/cjs/debounce-button.js"
      }
    }
  },
  "author": "Gabriel Freitas Yamamoto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gabrielyotoo/react-native-debounce-button/issues"
  },
  "homepage": "https://github.com/gabrielyotoo/react-native-debounce-button#readme",
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.71.8"
  },
  "devDependencies": {
    "@types/react": "~18.0.14",
    "typescript": "^4.9.4"
  }
}
